{
  "name": "rn-firebase-chat",
  "version": "1.0.0",
  "description": "Production-ready RAG system with MCP server, REST API, and web UI",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "npx tsx src/index.ts",
    "dev": "npx tsx watch src/index.ts",
